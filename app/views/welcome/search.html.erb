<h2>Search Results for <%= params[:search].split.map(&:capitalize).join(' ')%></h2>
<!-- excellent use of symbol to proc!! -->

  <%= form_tag '/places', method: :post do %>
    <%= hidden_field_tag(:search, params[:search]) %>
    <%= submit_tag 'Save to Favorites', data: { confirm: "Saved to Favorite Places! Go to Profile to see your Favorite Places"}, :class => "favoriteBtn" %>

  <% end %>

<p>
<% @photos.each do |pic| %>

  <a class="photoSearch" href="https://farm<%= pic["farm"].to_s %>.staticflickr.com/<%= pic["server"] %>/<%= pic["id"] %>_<%= pic["secret"] %>_z.jpg"
    style="
    width:210px;
    height:180px;
    display:inline-block;
    background-size:cover;
    background-postion:center center;
    background-image:url('https://farm<%= pic["farm"].to_s %>.staticflickr.com/<%= pic["server"] %>/<%= pic["id"] %>_<%= pic["secret"] %>_m.jpg');"></a>

<% end %>
</p>
